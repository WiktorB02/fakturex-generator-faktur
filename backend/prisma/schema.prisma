generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("OWNER")
  companies CompanyUser[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  id        String   @id @default(cuid())
  name      String
  nip       String?
  regon     String?
  address   String?
  city      String?
  postal    String?
  country   String?
  email     String?
  phone     String?
  website   String?
  logoUrl   String?
  users     CompanyUser[]
  clients   Client[]
  products  Product[]
  invoices  Invoice[]
  payments  Payment[]
  settings  CompanySettings?
  numberingPatterns NumberingPattern[]
  sequences InvoiceSequence[]
  recurringInvoices RecurringInvoice[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompanySettings {
  id          String   @id @default(cuid())
  companyId   String   @unique
  defaultCurrency String @default("PLN")
  defaultLanguage String @default("pl")
  paymentDays Int @default(14)
  company     Company @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NumberingPattern {
  id        String      @id @default(cuid())
  companyId String
  type      String
  pattern   String
  padding   Int         @default(3)
  reset     String      @default("YEARLY")
  company   Company     @relation(fields: [companyId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@unique([companyId, type])
}

model InvoiceSequence {
  id        String      @id @default(cuid())
  companyId String
  type      String
  year      Int
  month     Int
  seq       Int
  company   Company     @relation(fields: [companyId], references: [id])
  updatedAt DateTime    @updatedAt

  @@unique([companyId, type, year, month])
}

model CompanyUser {
  id        String   @id @default(cuid())
  userId    String
  companyId String
  role      String     @default("OWNER")
  user      User     @relation(fields: [userId], references: [id])
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, companyId])
}

model Client {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  nip         String?
  email       String?
  phone       String?
  address     String?
  tags        String   @default("")
  company     Company  @relation(fields: [companyId], references: [id])
  invoices    Invoice[]
  recurringInvoices RecurringInvoice[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  sku         String?
  unit        String   @default("PCS")
  priceNet    Decimal
  vatRate     Decimal
  stock       Int      @default(0)
  location    String?
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id          String      @id @default(cuid())
  companyId   String
  clientId    String?
  type        String
  number      String
  issueDate   DateTime
  saleDate    DateTime
  dueDate     DateTime?
  currency    String      @default("PLN")
  exchangeRate Decimal?
  exchangeDate DateTime?
  language    String      @default("pl")
  notes       String?
  issuerName  String
  issuerNip   String?
  issuerAddr  String?
  totalNet    Decimal
  totalVat    Decimal
  totalGross  Decimal
  paymentStatus String    @default("UNPAID")
  correctionOfId String?
  duplicateOfId  String?
  client      Client?     @relation(fields: [clientId], references: [id])
  company     Company     @relation(fields: [companyId], references: [id])
  items       InvoiceItem[]
  payments    Payment[]
  correctionOf Invoice?   @relation("CorrectionOf", fields: [correctionOfId], references: [id])
  corrections  Invoice[]  @relation("CorrectionOf")
  duplicateOf  Invoice?   @relation("DuplicateOf", fields: [duplicateOfId], references: [id])
  duplicates   Invoice[]  @relation("DuplicateOf")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([companyId, number])
}

model RecurringInvoice {
  id            String   @id @default(cuid())
  companyId     String
  clientId      String?
  type          String
  currency      String   @default("PLN")
  language      String   @default("pl")
  dueDays       Int      @default(14)
  intervalMonths Int     @default(1)
  nextRun       DateTime
  lastRun       DateTime?
  active        Boolean  @default(true)
  template      String
  company       Company  @relation(fields: [companyId], references: [id])
  client        Client?  @relation(fields: [clientId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model InvoiceItem {
  id        String   @id @default(cuid())
  invoiceId String
  productId String?
  name      String
  quantity  Decimal
  unit      String   @default("PCS")
  priceNet  Decimal
  vatRate   Decimal
  discount  Decimal  @default(0)
  invoice   Invoice  @relation(fields: [invoiceId], references: [id])
}

model Payment {
  id          String        @id @default(cuid())
  companyId   String
  invoiceId   String?
  amount      Decimal
  currency    String        @default("PLN")
  method      String        @default("TRANSFER")
  status      String        @default("UNPAID")
  receivedAt  DateTime?
  company     Company       @relation(fields: [companyId], references: [id])
  invoice     Invoice?      @relation(fields: [invoiceId], references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
